import string
import random

# All possible characters: letters, digits, special characters
all_characters = list(string.ascii_letters + string.digits + string.punctuation)

try:
    password_length = int(input("Enter the desired password length: "))
    if password_length <= 0:
        raise ValueError("Password length must be a positive integer.")
except ValueError as e:
    print("Invalid input:", e)
    exit()

random.shuffle(all_characters)

password_chars = []
for _ in range(password_length):
    password_chars.append(random.choice(all_characters))

random.shuffle(password_chars)

final_password = ''.join(password_chars)
print("Your generated password is:", final_password)
